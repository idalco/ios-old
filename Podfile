# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Finda' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Finda

  # ignore all warnings from all pods
  inhibit_all_warnings!

  # network requests
  pod 'AlamofireImage'
  
  # API modelling
  pod 'Moya'
  
  # json parsing
  pod 'SwiftyJSON'
  
  # request signing
  pod 'CryptoSwift'
  
  # progress spinners etc
  pod 'SVProgressHUD'
  
  # forms
  pod 'Eureka'

  # buttons
  pod 'DCKit'

  # keyboard manager
  pod 'IQKeyboardManagerSwift'

  # secure data storage
  # pod 'Strongbox'

  # Side menu
  pod 'SideMenuSwift'

  # Dashboard TableView
  #pod 'FoldingCell'

  pod 'Tabman', '~> 1.0'
  pod 'YPImagePicker'


  target 'FindaTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'FindaUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
